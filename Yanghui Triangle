#include <stdio.h>

int c(int m, int n);

int main(){
    
    int n;
    scanf("%d", &n);
    
    for(int i = 0; i < n; i++){
    	for(int j = 0; j < 3 * (n - 1 - i); j++){
    		printf(" ");
		}
		printf("%6d", 1);
		//
		
		int s = 1;
		for(int k = 1; k < i; k++){
			
			s = (i + 1 - k) * s / k;
			printf("%6d", s);
		}
		if(!i) printf("\n");
		if(i) printf("%6d\n", 1);
		
	}
    return 0;
}
